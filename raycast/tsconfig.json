{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2022",
        "lib": [
            "es2022",
            "dom"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ]
}